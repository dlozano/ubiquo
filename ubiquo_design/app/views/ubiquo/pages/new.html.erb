<h1><%= render :partial => 'title' %></h1>
<h2>
  <%= render :partial => "submenu" %>
</h2>
<%= error_messages_for 'page' %>

<%= form_for(@page, :url => ubiquo.pages_path) do |f| %>
  <%= render :partial => 'form', :locals => {:f => f} %>
    <div class="form-item-submit">
      <%= f.submit t('ubiquo.create'), :class => "bt-submit" %>
            <%= button_to_function t('ubiquo.back_to_index'),
                "document.location.href='#{ubiquo.pages_path}'",
                :class => "bt-back" %>
    </div>
<% end %>

<% content_for :sidebar do %>
  <%= uhook_new_sidebar %>
  <%= help_block_sidebar(t("ubiquo.helpmsg.design.page.new")) %>
<% end %>
