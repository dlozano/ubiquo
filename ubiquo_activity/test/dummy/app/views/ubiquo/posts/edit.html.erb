<h1><%= render :partial => 'title' %></h1>
<h2>
  <%= render :partial => "submenu" %>
</h2>
<%= error_messages_for 'post' %>

<% show_preview(Post) do |post| %>
  <%= render :partial => 'post', :object => post %>
<% end %>

<%= ubiquo_form_for([ubiquo, @post]) do |f| %>
  <%= render :partial => 'form', :locals => { :f => f } %>
  <%= f.submit_group do %>
    <%= f.update_button %>
    <%= f.back_button %>
  <% end %>
<% end %>

<%= content_for :sidebar do %>
  <%= help_block_sidebar(t("ubiquo.post.edit.help_message")) %>
<% end %>
